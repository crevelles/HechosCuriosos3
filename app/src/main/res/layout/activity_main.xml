<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorFondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a21657540.hechoscuriosos2.MainActivity">

    <TextView
        android:id="@+id/sabiasTextView"
        style="@style/HTCLetra"
        android:text="@string/sabias_que"
        android:textColor="@color/colorTransparente" />

    <TextView
        android:id="@+id/hechoCuriosoTextView"
        style="@style/HTCLetra.Negrita"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/hecho_curioso1"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/verOtroBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorBoton"
        android:onClick="mostrarHecho"
        android:text="@string/botonSiguiente" />

</RelativeLayout>
